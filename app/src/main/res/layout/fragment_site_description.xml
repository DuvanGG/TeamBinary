<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SiteDescriptionFragment"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="ExtraText">
        >

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/este_es_el_titulo"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            />

        <ImageView
            android:id="@+id/imagenURL"
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:layout_margin="10dp"
            android:src="@drawable/logo_app"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/titulo"
            tools:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/Temperatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="temperatura"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar2"
            tools:layout_editor_absoluteX="10dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/ver_temperatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="ver temperatura"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/Temperatura"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar2" />

        <TextView
            android:id="@+id/ubicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="ubicacion"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/Temperatura"
            tools:layout_editor_absoluteX="10dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/ver_ubicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="ver ubicacion"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/ubicacion"
            app:layout_constraintTop_toBottomOf="@+id/ver_temperatura" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="descripcion"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/ver_ubicacion"
            tools:layout_editor_absoluteX="10dp"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/ver_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="descripcion"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="10dp"
            app:layout_constraintTop_toBottomOf="@+id/description"
            tools:ignore="MissingConstraints"
            />


        <RatingBar
            android:id="@+id/ratingBar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:scaleX=".5"
            android:scaleY=".5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imagenURL"
            tools:ignore="SpeakableTextPresentCheck" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>